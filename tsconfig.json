{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@shared/*": ["shared/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
